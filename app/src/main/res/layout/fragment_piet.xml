<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/background_dark">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/holo_blue_dark"
        android:id="@+id/blue"
        app:layout_constraintTop_toBottomOf="@id/red" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="1" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/white_left_bottom"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/white"
        android:id="@+id/white_bottom_mid"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintVertical_weight="1" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/blue" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/white_bottom_right" app:layout_constraintHorizontal_weight="7"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/white"
        android:id="@+id/white_bottom_right"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/white_bottom_mid" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@id/yellow"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/white"
        android:id="@+id/white_left_top"
        app:layout_constraintEnd_toStartOf="@+id/red"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/white_left_bottom" app:layout_constraintTop_toTopOf="@id/red"
        app:layout_constraintVertical_chainStyle="spread_inside" android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_weight="1.0"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/white"
        android:id="@+id/white_left_bottom"
        app:layout_constraintEnd_toStartOf="@+id/red"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/white_left_top"
        app:layout_constraintBottom_toBottomOf="@+id/red" android:layout_marginTop="8dp"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/holo_orange_light"
        android:id="@+id/yellow" app:layout_constraintTop_toBottomOf="@id/white_bottom_right"
        app:layout_constraintEnd_toEndOf="@id/white_bottom_right"
        app:layout_constraintStart_toStartOf="@id/white_bottom_right"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_weight="1"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/red" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/white_left_top"
        app:layout_constraintHorizontal_weight="3.0"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintBottom_toTopOf="@id/blue"/>
</androidx.constraintlayout.widget.ConstraintLayout>