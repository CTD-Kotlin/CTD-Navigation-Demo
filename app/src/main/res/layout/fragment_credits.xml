<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offBlack"
    tools:context=".fragments.CreditsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/red_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="310dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/red_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="310dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_top_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="130dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="430dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_right_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="355dp" />

    <TextView
        android:id="@+id/middle_left_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_xl"
        android:layout_marginBottom="@dimen/margin_normal"
        android:background="@color/offWhite"
        app:layout_constraintBottom_toTopOf="@id/red_bottom"
        app:layout_constraintEnd_toStartOf="@id/red_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/left_top_separator" />

    <TextView
        android:id="@+id/top_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/red_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/red_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_right_yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_wide"
        android:background="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/bottom_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bottom_separator"
        app:layout_constraintTop_toTopOf="@id/bottom_right_divider" />

    <TextView
        android:id="@+id/bottom_right_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@id/bottom_right_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bottom_separator"
        app:layout_constraintTop_toTopOf="@id/red_bottom" />

    <TextView
        android:id="@+id/bottom_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:background="@color/offWhite"
        app:layout_constraintBottom_toBottomOf="@id/bottom_border"
        app:layout_constraintEnd_toStartOf="@id/bottom_separator"
        app:layout_constraintStart_toStartOf="@id/red_left"
        app:layout_constraintTop_toTopOf="@id/red_bottom" />

    <TextView
        android:id="@+id/bottom_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/bottom_border"
        app:layout_constraintEnd_toStartOf="@id/red_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red_bottom" />

    <TextView
        android:id="@+id/top_left_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/offWhite"
        app:layout_constraintBottom_toTopOf="@id/left_top_separator"
        app:layout_constraintEnd_toEndOf="@id/red_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gray_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_border" />

</androidx.constraintlayout.widget.ConstraintLayout>
