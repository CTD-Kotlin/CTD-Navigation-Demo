<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.ctdnavigagtiondemo.fragments.StartFragment"
        android:label="time to rock your scissors"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_playGameFragment"
            app:destination="@id/playGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.ctdnavigagtiondemo.fragments.ResultsFragment"
        android:label="this is the resuslt of your ga"
        tools:layout="@layout/fragment_results" >
        <argument
            android:name="@string/USER_CHOICE"
            app:argType="com.example.ctdnavigagtiondemo.rockpaperscissors.RPS" />
        <argument
            android:name="@string/COMPUTER_CHOICE"
            app:argType="com.example.ctdnavigagtiondemo.rockpaperscissors.RPS" />
        <action
            android:id="@+id/action_resultsFragment_to_creditsFragment"
            app:destination="@id/creditsFragment" />
    </fragment>
    <fragment
        android:id="@+id/playGameFragment"
        android:name="com.example.ctdnavigagtiondemo.fragments.PlayGameFragment"
        android:label="pcik your selectrion"
        tools:layout="@layout/fragment_play_game">
        <action
            android:id="@+id/action_playGameFragment_to_resultsFragment"
            app:destination="@id/resultsFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_startFragment"
        app:destination="@id/startFragment"
        app:popUpTo="@+id/startFragment" />
    <fragment
        android:id="@+id/creditsFragment"
        android:name="com.example.ctdnavigagtiondemo.fragments.CreditsFragment"
        android:label="CreditsFragment" />
</navigation>